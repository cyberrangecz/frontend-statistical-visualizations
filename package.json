{
    "name": "statistical-visualizations",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve --configuration local --ssl",
        "api": "json-server -w projects/statistical-visualizations-example-app/src/json-server/db.js --routes projects/statistical-visualizations-example-app/src/json-server/routes.json --middlewares projects/statistical-visualizations-example-app/src/json-server/server.js",
        "build": "ng build",
        "lint": "ng lint && npm run prettier-check",
        "prettier-check": "prettier --check \"projects/**/*.ts\"",
        "prettier-fix": "prettier --write \"./projects/**/*.ts\"",
        "build-example-app": "ng build statistical-visualizations-example-app --configuration production",
        "build-library": "ng build --configuration production statistical-visualizations",
        "create-package": "cd dist/statistical-visualizations && npm pack",
        "copy-static-files": "cp LICENSE dist/statistical-visualizations && echo \"\n---\nSources: $(git remote get-url origin)\" >> dist/statistical-visualizations/README.md",
        "build-and-pack": "npm install && npm run build-library && npm run copy-static-files && npm run create-package",
        "ci-update-version": "cd projects/statistical-visualizations/ && npm version $TAG_VERSION",
        "ci-build-and-pack": "npm ci --cache .npm --prefer-offline && npm run build-library && npm run copy-static-files && npm run create-package",
        "ci-publish-package": "cd dist/statistical-visualizations && npm publish",
        "prepare": "husky"
    },
    "dependencies": {
        "@angular/animations": "^18.2.13",
        "@angular/cdk": "^18.2.14",
        "@angular/common": "^18.2.13",
        "@angular/compiler": "^18.2.13",
        "@angular/core": "^18.2.13",
        "@angular/forms": "^18.2.13",
        "@angular/material": "^18.2.13",
        "@angular/platform-browser": "^18.2.13",
        "@angular/platform-browser-dynamic": "^18.2.13",
        "@angular/router": "^18.2.13",
        "@crczp/clustering-visualization": "^0.0.2",
        "@crczp/d3-service": "^0.0.3",
        "@crczp/overview-visualization": "^0.0.2",
        "@crczp/theme": "^0.0.3",
        "@sentinel/auth": "^18.0.3",
        "@sentinel/common": "^18.0.4",
        "@sentinel/layout": "^18.1.4",
        "angular-oauth2-oidc": "^17.0.2",
        "angular-oauth2-oidc-jwks": "^17.0.2",
        "core-js": "^3.40.0",
        "d3": "^7.9.0",
        "fast-levenshtein": "^3.0.0",
        "ngx-indexed-db": "^18.0.0",
        "rxjs": "^7.8.1",
        "tslib": "^2.7.0",
        "zone.js": "^0.14.10"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.2.14",
        "@angular-eslint/builder": "^18.4.3",
        "@angular-eslint/eslint-plugin": "^18.4.3",
        "@angular-eslint/eslint-plugin-template": "^18.4.3",
        "@angular-eslint/schematics": "^18.4.3",
        "@angular-eslint/template-parser": "^18.4.3",
        "@angular/cli": "^18.2.14",
        "@angular/compiler-cli": "^18.2.13",
        "@angular/language-service": "^18.2.13",
        "@types/d3": "^7.4.3",
        "@types/node": "^22.6.1",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.24.0",
        "eslint": "^9.20.0",
        "husky": "^9.1.7",
        "jasmine-core": "^5.3.0",
        "jasmine-spec-reporter": "^7.0.0",
        "json-server": "^0.17.4",
        "ng-packagr": "^18.2.1",
        "prettier": "^3.5.0",
        "ts-node": "^10.9.2",
        "typescript": "5.5.4"
    }
}
