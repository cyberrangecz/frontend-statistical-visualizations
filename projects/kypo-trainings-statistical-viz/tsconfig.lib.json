{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2018",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "@muni-kypo-crp/statistical-visualizations/barchart": ["./barchart/src/public_api.ts"],
      "@muni-kypo-crp/statistical-visualizations/bubblechart": ["./bubblechart/src/public_api.ts"],
      "@muni-kypo-crp/statistical-visualizations/combined-diagram": ["./combined-diagram/src/public_api.ts"],
      "@muni-kypo-crp/statistical-visualizations/scatterplot": ["./scatterplot/src/public_api.ts"],
      "@muni-kypo-crp/statistical-visualizations/filters": ["./filters/src/public_api.ts"],
      "@muni-kypo-crp/statistical-visualizations/statistical-viz": ["./statistical-viz/src/public_api.ts"],
      "@muni-kypo-crp/statistical-visualizations/internal": ["./internal/src/public_api.ts"]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
